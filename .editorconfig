# Default settings for all files
root = true

[*]
# Unix-style newlines with a newline ending every file
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C# source files
[*.cs]
indent_style = space
indent_size = 4

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Project files
[*.{csproj,sln,vcxproj,vcxproj.filters,vcxproj.user,targets,props}]
indent_style = space
indent_size = 2

# Configuration files
[*.{config,json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# License files and patches
[*.{license,patch}]
indent_style = space
indent_size = 2
